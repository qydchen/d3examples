{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "noEmitOnError": true,
        "esModuleInterop": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
}
